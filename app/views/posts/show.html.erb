<div id="background-show-post" class="container pb-4 mb-4">
    <div class="row p-3">
      <p id="notice"><%= notice %></p>
      <div class="col-md-8">
        <p>
          <strong>Size:</strong>
          <%= @post.size %>
        </p>

        <p>
          <strong>Rate:</strong>
          <%= @post.rate %>
        </p>

        <p>
          <strong>Total price:</strong>
          <%= @post.total_price %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @post.address %>
        </p>

        <p>
          <strong>Location:</strong>
          <%= @post.location %>
        </p>

        <p>
          <strong>Area type:</strong>
          <%= @post.area_type %>
        </p>
      </div>
      <div class="col-md-4 center">
        <% if @post.try(:thumbanil_image).attached? %>
          <%= image_tag url_for(@post.try(:thumbanil_image)) %>
        <% end %>
      </div>
    </div>
    <hr>
    <div>
      <% if @post.try(:images).attached? %>
        <%= image_tag url_for(@post.try(:images)) %>
      <% else %>
        <div class="center">
          <span class="no-image-span p-2">No More Images Attached</span>
        </div>
      <% end %>
    </div>
    <hr>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
</div>