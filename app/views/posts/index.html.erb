<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div class="post-listing container">
  <%= render 'post', post: @posts[0] %>
</div>
  
<table>
  <thead>
    <tr>
      <th>Size</th>
      <th>Rate</th>
      <th>Total price</th>
      <th>Address</th>
      <th>Location</th>
      <th>Area type</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.size %></td>
        <td><%= post.rate %></td>
        <td><%= post.total_price %></td>
        <td><%= post.address %></td>
        <td><%= post.location %></td>
        <td><%= post.area_type %></td>
        <% if post.try(:image).attached? %>
          <td><%= image_tag url_for(post.try(:image)) %></td>
        <% end %>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
