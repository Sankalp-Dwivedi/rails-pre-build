<!DOCTYPE html>
<html>
  <head>
    <title>Plotseek</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- -----------custom css------------ -->
    <style type="text/css">
      .button {
        /*background-color: #04AA6D;*/
        border: none;
        color: black;
        padding: 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 18px;
        margin: 4px 2px;
        border-radius: 12px;
      }
    </style>
    <!-- -----------custom css------------ -->
  </head>

  <body>
    <div>
      <% if user_signed_in? %>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <!-- <a href="<%= destroy_user_session_path %>">Log Out</a> -->
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: 'button' %>
      <% else %>
        <a href="<%= user_session_path %>">Sign IN</a>
        <a href="<%= new_user_registration_path %>">Sign UP</a>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
