    <script type="text/javascript">
      $(document).ready(function() {
        $(window).scroll(function() {
          if ($(window).scrollTop() > 0) {
            $("#header").removeClass("header-transparent");
          } else {
            $("#header").addClass("header-transparent");
          }
        })
      })
    </script>

  </body>
</html>
